/* pages/cart/cart.wxss */

.cart-wrapper {
    /* position: absolute;
    width: 100%;
    height: 100%; 
    display: flex; 
    flex-direction: column;    */
    font-size: 28rpx;
}

.card-edit-tool {
    float: right;
    /* height: 88rpx; */
    /* line-height: 88rpx; */
}

.card-edit-tool text {
    display: block;
    height: 88rpx;
    line-height: 88rpx;
    margin-right: 24rpx;
}


.order-detail {
    position: relative;
    display: flex;
    flex-direction: row; 
    align-items: center;
    padding: 15rpx 25rpx;
    margin-bottom: 8rpx;
    background: #eee;
}

.order-clicker {
    position: absolute;
    width: 60%;
    height: 100%;
    z-index: 1;
}

.order-detail>view:first-child {
    /* position: relative; */
    height: 188rpx; 
     /* flex:1;  */
    /* min-height: 100%; */
    /* line-height: 188rpx; */
    display: flex;
    align-items: center;
}

.order-items {
    display: flex;
    flex-direction: row;
    /* justify-content: center; */
    width: 100%;
    color: #333;
    transition: width 1s;

    /* margin-bottom: 30rpx; */
}

.order-detail-info {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
    font-size: 26rpx;
    /* justify-content: space-between; */
    /* align-items: center; */
}

.bottom-view {
    position: absolute;
    bottom: 0;
    color: #ff722c;
}

.bottom-view text:first-child {
    font-size: 30rpx;
}

.order-detail image {
    width: 188rpx;
    height: 188rpx;
    flex-shrink: 0;
    margin-right: 18rpx;
}

.grey-text {
    font-size: 24rpx;
    color: #666;
}


.order-detail-info text:first-child {
    margin-bottom: 23rpx;
}

.order-count {
    position: absolute;
    right: 0;
    bottom: 0;
}

.order-input {
    width: 210rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}  

.order-input view {
    display: flex;
    justify-content: center;
    color: #999;
    align-items: center;
    width: 65rpx;
    height: 100%;
    background: #fff;
    font-size: 40rpx;
    font-weight: 600;
    border-radius: 15rpx 0 0 15rpx;
}

.count-only-one view:first-child {
    background: #fbfbfb;
}

.order-input view:last-child {
    border-radius: 0 15rpx 15rpx 0;
}

.order-input label {
    margin: 0 2rpx;
    height: 100%;
}

.order-input input {
    /* display: flex;? */
     height: 100%; 
    background: #fff;
    text-align: center;
    width: 77rpx;
    /* align-items: center; */
    /* justify-content: center; */
}

.order-price {
    float: right;
    padding: 30rpx 25rpx;
}

.order-price text:first-child {
    margin-right: 28rpx;
}

.order-price text:nth-child(3) {
    font-size: 36rpx;
    font-weight: 600;
}

.order-price text:nth-child(4) {
    font-size: 24rpx;
}


.common-circle {
    flex-shrink: 0;
    width: 32rpx;
    height: 32rpx; 
    margin-right: 25rpx;
}

.chosen-circle {
   
    /* background: #000; */
    box-sizing: border-box;
    border-radius: 50%;
    /* visibility: visible; */
    border: 1rpx solid #272727;
}

.hidden-cicle {
    position: absolute;
    visibility: hidden;
}


.bottom-wrapper {
    /* overflow: hidden; */
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content:  space-between; 
}

.bottom-wrapper view {
    flex: 1;
    flex-shrink: 0; 
}

/* scroll-view {
    overflow-y: scroll;
} */




.chose-all {
    display: flex;
    align-items: center;
    margin-left: 25rpx;
}

.chose-all .common-circle {
    line-height: 32rpx;
}

.chose-all text {
    margin-left: 3rpx;
}

.common-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100%;
    line-height: 105rpx;
    overflow: hidden;
}



.order-detail .checked-right,
.checked-right {
    width: 100%;
    height: 100%;
}

.money-block {
     position: absolute;
    /* overflow: hidden; */
    right: 258rpx;
    height: 105rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding-top: 22rpx;
    font-size: 32rpx;
    line-height: normal;
    /* margin-right: -153rpx; */
}

.money-block text {
    flex: 1;
}

.money-block view {
    margin-bottom: 5rpx;
    
}

.money-block view text:first-child {
    margin-right: 20rpx; 
    color: #333;
    font-weight: 600;
}

.money-block view text:nth-child(2) {
    /* font-size: 24rpx; */
    color: #ff722c;
}

.money-block view text:last-child {
    font-size: 24rpx;
    color: #ff722c;
}

.money-block text:last-child {
    font-size: 20rpx;
    color: #999;
}