/* pages/mine/mine.wxss */

.mine-wrapper {
    position: absolute;
    width: 100%;
    height: 100%;
    font-size: 24rpx;
    background: #eee;
}

.mine-wrapper .cover {
    padding: 52rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #99d6ce;
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
}

.mine-wrapper .cover image {
    width: 120rpx;
    height: 120rpx;
    margin-bottom: 15rpx;
    border-radius: 50%;
    border: 2rpx solid #fff;
    box-sizing:border-box;
}

.common-card {
    position: relative;
    display: flex;
    align-items: center;
    /* justify-content: center; */
    height: 84rpx;
    padding-left: 11rpx;
    color: #666;
    background: #fff;
    border-bottom: 1rpx solid #e2e2e2;
    box-sizing:border-box;
}

.middle-card {
    padding-left: 33rpx;
}

.card-title {
    margin-right: 343rpx;
    font-size: 32rpx;
    color: #000;
    font-weight: 600;
}

navigator {
    display: flex;
    align-items: center; 
    /* flex-direction: row; 
    justify-content: center; */
}

.card-title + navigator text {
    margin-right: 50rpx;
}


.logos-card {
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 0 90rpx;
    background: #fff;
}

.logos-card navigator {
    display: flex;
    flex-direction: column;
    align-items: center;
    /* height: 98rpx; */
    padding: 44rpx 0;
}

.logos-card image {
    margin-bottom: 33rpx;
}

.logos-card navigator:nth-child(1) image {
    width: 49rpx;
    height: 43rpx;
}

.logos-card navigator:nth-child(2) image {
    width: 58rpx;
    height: 44rpx;
}

.logos-card navigator:nth-child(3) image {
    width: 48rpx;
    height: 40rpx;
}

.logos-card navigator:nth-child(4) image {
    width: 43rpx;
    height: 45rpx;
}

.left-icon {
    width: 49rpx;
    height: 43rpx;
}

.card-bottom view {
    padding: 0 28rpx;
    background: #fff;
}

.card-bottom text {
    margin-left: 35rpx;
}

.card-bottom navigator view:last-child {
    position: absolute;
    display: flex;
    height: 100%; 
    padding: 0;
    right: 8rpx;  
    align-items: center; 

}

.card-bottom view:nth-child(1) {
    margin-bottom: 19rpx;
}

.common-card:last-child {
    border: none;
}

.middle-card navigator {
    position: absolute;
    height: 100%;
    right: 36rpx;
    display: flex;
    align-items: center;
}

.card-bottom-top navigator:nth-child(1) .left-icon {
    height: 44rpx;
}

.card-bottom-top navigator:nth-child(2) .left-icon {
    width: 46rpx;
    height: 42rpx;
}

.card-bottom-top navigator:nth-child(3) .left-icon {
    width: 46rpx;
    height: 48rpx;
}

.card-bottom-bottom navigator:nth-child(1) .left-icon {
    width: 44rpx;
    height: 44rpx;
}

.card-bottom-bottom navigator:nth-child(2) .left-icon {
    width: 45rpx;
    height: 45rpx;
}