}

.active-text {
    background: #ff722c !important;
    color: #fff !important;
}

.order-input {
    width:210rpx;
    height:60rpx;
    display:flex;
    align-items:center;
    justify-content:center;
}

.order-count {
    position: absolute;
    right: 20rpx;
    /* bottom:0; */
    top: 50%;
    margin-top: -30rpx;
}

.order-input input {
    height:100%;
    width:77rpx;
    background: #f5f5f5;
    text-align:center;
    color: #333;
}

.order-input view {
    display:flex;
    justify-content:center;
    width:65rpx;
    height:100%;
    color: #999;
    align-items:center;
    background: #f5f5f5;
    font-size:40rpx;
    font-weight:600;
