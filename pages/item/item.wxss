.item-color-wrapper {
    display: flex;
    flex-direction: column;
    padding: 44rpx 0;
}

.item-color-photo {
    width: 622rpx;
    height: 423rpx;
    margin-bottom: 45rpx;
}

.item-color-photo:last-child {
    margin: 0;
}

.item-photo-right {
    align-self: flex-end;
}

.item-color-photo image {
    width: 100%;
    height: 100%; 
} 

.item-design-photo {
    width: 650rpx;
    height: 984rpx;
}

.item-design-photo image {
    width: 100%;
    height: 100%;
}

.item-design-wrapper {
    display: flex;
    flex-direction: column;
    padding-top: 44rpx;
}

.cart-bottom {
    width: 100%;
    display: flex;
    justify-content: space-between;
    /* transform: translate(-527rpx, 0); */

}

.cart-bottom .button {
    width: 291rpx;
    flex-shrink: 0;
    transition: all 0.4s ease-in-out;
}

 .cart-bottom .button:last-child {
    transform: translate(375rpx, 0);   
    width: 0rpx; 
    visibility: hidden; 
}

.action-tool .button {
    transform: translate(-136rpx, 0); 
    width: 50%;
}

.action-tool .button:last-child {
    transform: translate(-136rpx, 0); 
    width: 50%;
    visibility: visible;
}

.action-tool .bottom-toggle {
    transform: translate(-375rpx, 0); 
    visibility: hidden;
    /* width: 0; */
}

.bottom-toggle {
    flex: 1;
    display: flex;
    font-size: 18rpx;
    align-items: center;
    justify-content: space-around;
    color: #5289d9;
    transition: all 0.4s ease-in-out;

}

.bottom-toggle navigator, .bottom-ico {
    display: flex;
    height: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.bottom-toggle image {
    width: 100%;
    height: 100%;
    flex-shrink: 0;
    margin-bottom: 8rpx;
}

.bottom-toggle>navigator:nth-child(1) view {
    width: 46rpx;
    height: 46rpx;
}

.bottom-toggle>navigator:nth-child(2) view {
    width: 44rpx;
    height: 44rpx;
}

.bottom-ico view {
    width: 46rpx;
    height: 42rpx;
}



.temporary-modal {
    visibility: hidden;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: 2;
}

.show-modal {
    visibility: visible;
}

.temporary-modal .modal-view {
    position: absolute;
    bottom: 106rpx;
    width: 100%;
    height: 0;
    background: #ebecef;
    transition: all 0.4s ease-in-out;
    z-index: 9;   
    font-size: 28rpx;
    color: #333;
}

.action-tool .modal-view {
    height: 926rpx;
}

.shadow-modal {
    position: absolute;
    /* bottom: 106rpx; */
    width: 100%;
    height: 100%;
}

.modal-common {
    margin-bottom: 23rpx;
    background: #fff;
}

.common-header {
    position: relative;
    display: flex;
    padding: 22rpx 46rpx;
}

.common-header::before {
    content: " ";
    position: relative;
    /* display: block; */
    width: 9rpx;
    height: 36rpx;
    margin-right: 17rpx;
    background: #ff722c;
}

.modal-info {
    display: flex;
    height: 196rpx;
}

.modal-info image {
    width: 100%;
    height: 100%;
}

.modal-info-right {
    display: flex;
    flex-direction: column;
    margin-left: 25rpx; 
    justify-content: space-around;
}

.modal-info-right>view:first-child {
    color: #ff722c;
    font-size: 24rpx;
}

.modal-info-right>view:last-child {
    position: absolute;
    width: 37rpx;
    height: 37rpx;
    top: 20rpx;
    right: 20rpx;
}

.modal-info-right>view:first-child text:nth-child(2) {
    font-size: 48rpx;
}

.modal-info-right>view:nth-child(3) text:last-child {
    margin-left: 22rpx;
    color: #ff722c;
    padding: 5rpx 11rpx; 
    background: #e5e5e5;
    font-weight: 600;
    border-radius: 10rpx;
}

.modal-info-left {
    position: relative;
    top:-45rpx;
    width: 225rpx;
    height: 234rpx;
    margin-left: 40rpx;
    border-radius: 10rpx;
    border: 5rpx solid #fff;
    /* box-sizing: content-box; */
}

.modal-info-left image {
    border-radius: 10rpx;
}

