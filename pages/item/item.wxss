}

.tag-toggle {
    position: relative;
    display: flex; 
    height: 114rpx;
    justify-content: space-around;
    font-size: 32rpx;
    color: #333;
    padding-top: 17rpx; 
    box-sizing: border-box;
}

.tag-toggle>view {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
    border: 1rpx solid #f0f0f0;
    box-sizing: border-box;
} 

.tag-toggle>view:nth-child(2) {
    border: none;
}

.tag-toggle image {
    position: absolute;
    top: 1rpx;
    left: 0;
    width: 187rpx;
    height: 113rpx;
}

