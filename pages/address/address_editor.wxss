/* pages/address/address_editor.wxss */
.editor-wrapper {
    position: absolute;
    overflow: hidden;
    width: 100vw;
    height: 100%;
    background-color: #eee;
}

form {
    display: flex;
    flex-direction: column;
    position: relative;
    width: 100%;
    padding-left: 26rpx;
    /* height: 100%;  */
    overflow: hidden;
    background-color: #fff;
}

.form-tool {
    position: relative;
    height: 95rpx;
    font-size: 28rpx;
    /* padding-left: 26rpx; */
    border-bottom: 1rpx solid #e2e2e2;
    color: #333;
}

.form-tool label {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    /* justify-content: center; */
}

.form-tool text {
    flex-shrink: 0;
}

.form-tool input {
    height: 100%;
    width: 100%;
    padding-left: 380rpx;
}
.package-owner input {
    padding-left: 200rpx;

}

.text-area-tool {
    height: 176rpx;
    font-size: 28rpx;
    /* padding-left: 26rpx; */
    /* padding-top: 45rpx; */
    /* border-bottom: 1rpx solid #e2e2e2; */
    color: #333;
}

.form-tool switch {
    position: absolute;
    right: 50rpx;
    top:50%;
    margin-top:-16px;

}

.absolute-right {
    position:absolute;
    right:0;
    /* text-align:right; */
}

.place-holder-text {
     position: absolute; 
     height: 100%; 
     right: 56rpx; 
     vertical-align: middle; 
      display: flex;  
     align-items: center;     
}
/* 
.place-holder-style {
     margin-left: 270rpx;  
} */
.phone-tool input {
    padding-left: 330rpx;
}



.plus-ico {
    z-index: 2;
    position: absolute;
    width: 36rpx; 
    height: 36rpx; 
    right: 56rpx;
    top: 50%;
    margin-top: -18rpx;
} 

.select-design text {
    margin-right: -10rpx;
    /* white-space: nowrap; */
     text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    width: 400rpx; 
}


.hide-holder {
    display: none;
}

textarea {
    padding-top: 25rpx;
    margin-left: -10rpx;   
    width: 90%;
    height: 100%;
}

form .block-back-bottom {
    margin-left: -25rpx;
}


.button-group {
    margin-top: 40rpx;
}